<%= form_for(@employee) do |f| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% @employee.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<!--form attributes-->
<div class="form-row">
  
      <div class="form-group col-md-4">
      <label for="first_name"><%= f.label :first_name %></label>
      <%= f.text_field :first_name, :class => "form-control" %>
      </div>
      
      <div class="form-group col-md-4">
      <label for="last_name"><%= f.label :last_name %></label>
      <%= f.text_field :last_name, :class => "form-control" %>
      </div>

</div>

<div class="form-row">
  
  <div class="form-group col-md-2">
    <label for="ssn"><%= f.label :ssn %></label>
    <%= f.text_field :ssn, :class => "form-control" %>
  </div>
  
  <div class="form-group col-md-4">
      <label for="date_of_birth"><%= f.label :date_of_birth %></label>
      <%= f.text_field :date_of_birth, :class => "form-control" %>
  </div>
    
    <div class="form-group col-md-2">
      <label for="phone"><%= f.label :phone %></label>
      <%= f.text_field :phone, :class => "form-control" %>
    </div>
    
    <div class="form-group col-md-4">
      <label for="role"><%= f.label :role %></label>
      <%= f.text_field :role, :class => "form-control" %>
    </div>
    
</div>


<div class="form-row">
  
  <div class="form-group col-md-4">
      <label for="active"><%= f.label :active %></label>
      <%= f.select "active", options_for_select([["true"],["false"]]), :class => "form-control" %>
  </div>
  
</div>


  <%= f.submit "Submit", :class => 'btn btn-primary' %>
<br/>

<br/>
 <% end %>

