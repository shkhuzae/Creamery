

<!--link to new employee-->
<%= link_to 'New Job', new_job_path %>
<table class="table table-striped">
  <thead>
    <tr>

      <th scope="col">Job</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
 
    </tr>
  </thead>
  <tbody>
    
      
      <% @jobs.each do |job| %>
        <tr>
          <td><%= link_to job.name, job_path(job) %></td>
          <td><%= link_to 'Edit', edit_job_path(job), :class=> "btn btn-warning" %></td>
          <td><%= link_to 'Inactivate', Job, confirm: 'Are you sure?', method: :delete, :class=> "btn btn-danger" %></td>
        </tr>
      <% end %>
    
    
  </tbody>
</table>


