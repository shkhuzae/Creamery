    </div>
  <% end %>

<!--form attributes-->
<div class="form-row">
  
      <div class="form-group col-md-4">
      <label for="employee_id"><%= f.label :employee_id %></label>
      <%= f.text_field :employee_id, :class => "form-control" %>
      </div>
      
      <div class="form-group col-md-4">
      <label for="email"><%= f.label :email %></label>
      <%= f.text_field :email, :class => "form-control" %>
      </div>

</div>
<div class="form-row">
      <div class="form-group col-md-4">
      <label for="password"><%= f.label :password %></label>
      <%= f.text_field :password, :class => "form-control" %>
      </div>
</div>


<%= f.submit "Submit", :class => 'btn btn-primary' %>
